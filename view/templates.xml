<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="assets_backend" inherit_id="web.assets_backend"
			name="itbampa css assets">
			<xpath expr="link[last()]" position="after">
				<link href="/itbampa/static/src/css/itbampa.css" rel="stylesheet"
					type="text/css" />
			</xpath>
		</template>
		<template id="layout" inherit_id="report.layout" name="itbampa reports css assets">
			<xpath expr="//head/link[last()]" position="after">
				<link href="/itbampa/static/src/css/itbampa_report.css" rel="stylesheet"
					type="text/css" />
			</xpath>
		</template>
		<template id="itbampa.informe_board">
			<t t-call="report.html_container">
				<t t-as="o" t-foreach="docs">
					<t t-call="report.internal_layout">
						<div class="page">
							<h1 t-field="o.name" />
							<div class="row mb32">
								<table class="table table-condensed">
									<thead>
										<tr class="text-center">
											<th>From</th>
											<th>To</th>
											<th>State</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>
												<span t-field="o.date_start" />
											</td>
											<td>
												<span t-field="o.date_end" />
											</td>
											<td>
												<span t-field="o.state" />
											</td>
										</tr>
									</tbody>
								</table>
							</div>
							<div class="row mb32">
								<table class="table table-condensed">
									<thead>
										<tr class="text-center">
											<th>Member</th>
											<th>Role</th>
											<th>Mobile</th>
											<th>Email</th>
										</tr>
									</thead>
									<tbody>
										<t t-as="m" t-foreach="o.members">
											<tr>
												<td>
													<span t-field="m.partner" />
												</td>
												<td>
													<span t-field="m.role" />
												</td>
												<td>
													<span t-field="m.mobile" />
												</td>
												<td>
													<span t-field="m.email" />
												</td>
											</tr>
										</t>
									</tbody>
								</table>
							</div>
						</div>
					</t>
				</t>
			</t>
		</template>
		<template id="itbampa.report_activity_event">
			<t t-call="report.html_container">
				<t t-as="o" t-foreach="docs">
					<t t-call="report.internal_layout">
						<div class="page">
							<h1>
								<i class="fa fa-calendar"></i>
								Activity Attendance Report
							</h1>
							<div class="row mb8">
								<table class="table table-condensed">
									<thead>
										<tr class="text-center">
											<th>Date</th>
											<th>Count</th>
											<th>State</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>
												<span t-field="o.name" />
											</td>
											<td>
												<span t-field="o.total_partners" />
											</td>
											<td>
												<span t-field="o.state" />
											</td>
										</tr>
									</tbody>
								</table>
							</div>
							<div class="row">
								<table class="table table-condensed">
									<thead>
										<tr class="text-center">
											<th>Is missing?</th>
											<th>Name</th>
											<th>Product</th>
											<th>Comment</th>
										</tr>
									</thead>
									<tbody>
										<t t-as="m" t-foreach="o.partner_ids">
											<tr>
												<td>
													<i class="fa fa-square-o"></i>
												</td>
												<td>
													<span t-field="m.partner_id" />
												</td>
												<td>
													<span t-field="m.activity_product_id" />
												</td>
												<td>
													<span t-field="m.comment" />
												</td>
											</tr>
										</t>
									</tbody>
								</table>
							</div>
						</div>
					</t>
				</t>
			</t>
		</template>
		<template id="itbampa.activity_monthly_report">
			<t t-call="report.html_container">
				<t t-call="report.internal_layout">
					<div class="page">
						<t t-foreach="docs" t-as="d">
							<div class="row">
								<h1>
									Report for <span t-field="d.school_calendar_id"></span>
								</h1>
							</div>
							<div class="row mt16">
								<table class="table table-condensed">
									<thead>
										<tr class="text-center">
											<th>Month</th>
											<th>Lective Days</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>
												<span t-field="d.month_id"></span>
											</td>
											<td>
												<span t-field="d.lective_days"></span>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
							<div class="row mt16">
								<table class="table table-condensed">
									<thead>
										<tr class="text-center">
											<th>Member</th>
											<th>Product</th>
											<th>Total</th>
										</tr>
									</thead>
									<t t-foreach="d.line_ids" t-as="l">
										<tbody>
											<tr>
												<td>
													<span t-field="l.partner"></span>
												</td>
												<td>
													<span t-field="l.product"></span>
												</td>
												<td>
													<span t-field="l.total"></span>
												</td>
											</tr>
										</tbody>
									</t>
								</table>
							</div>
						</t>
					</div>
				</t>
			</t>
		</template>
	</data>
</openerp>
